{{#liquid-unless (is-empty projection) }}
  {{#layout/md-card
    collapsible=true
    title="Reference System Projection Parameters"
    data-spy=(if projection "Projection Parameters" false)
    required=required
    collapsed=false
    shadow=true
    btnAction=(fn (mut projection) null)
    btnText="Delete"
    btnIcon="times"
    btnClass="danger"
    profilePath=(concat profilePath ".referenceSystemParameterSet")
  }}
    {{object/md-srs/parameter/projection
      model=projection
      profilePath=(concat profilePath ".referenceSystemParameterSet.projection")
    }}
  {{/layout/md-card}}
{{else}}
  {{#if allEmpty}}
    {{control/md-button
      class="btn btn-md btn-success"
      text="Add Projection Parameters"
      icon="plus"
      click=(fn (mut projection) (hash))
    }}
  {{/if}}
{{/liquid-unless}}

